{
  "name": "simple-microservices",
  "license": "MIT",
  "author": "Paweł Kołaczyński",
  "repository": "github:kolaczyn/simple-microservices",
  "version": "0.0.0",
  "scripts": {
    "dev": "ts-node-dev src/index.ts",
    "dev:run": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "format": "prettier -c src",
    "types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vitest run",
    "ci": "run-p -l --aggregate-output format lint types",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@swc/core": "^1.3.37",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.54.0",
    "eslint": "^8.33.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.3",
    "rimraf": "^4.1.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "4.9.5",
    "vite": "^4.1.2",
    "vitest": "^0.29.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "eslint"
    ]
  }
}
