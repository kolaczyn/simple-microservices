{
  "name": "simple-microservices",
  "license": "MIT",
  "author": "Paweł Kołaczyński",
  "repository": "github:kolaczyn/simple-microservices",
  "version": "0.0.0",
  "scripts": {
    "start-producer": "ts-node ./src/producer",
    "start-consumer": "ts-node ./src/consumer",
    "migrate": "knex migrate:latest",
    "format": "prettier -c src",
    "types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vitest run",
    "ci": "run-p -l --aggregate-output format lint types",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@swc/core": "^1.3.37",
    "@types/amqplib": "^0.10.1",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.54.0",
    "eslint": "^8.33.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.3",
    "rimraf": "^4.1.2",
    "ts-node": "^10.9.1",
    "typescript": "4.9.5",
    "vite": "^4.1.2",
    "vitest": "^0.29.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "eslint"
    ]
  },
  "dependencies": {
    "amqplib": "^0.10.3",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "knex": "^2.5.1",
    "pg": "^8.11.3"
  }
}
